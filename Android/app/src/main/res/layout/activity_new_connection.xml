<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_connection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="pt.ulisboa.tecnico.sirs.droidcipher.NewConnectionActivity">


    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_connection"
        android:padding="20dp"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/new_connection_img"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="20dp"
        android:layout_below="@id/new_connection_img">
        <TextView
            android:text="Name"
            android:layout_column="0"
            android:layout_width="128dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:text="Address"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:text="Connection Id"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/newconnection_nametv"
            android:layout_column="1"
            android:layout_row="0"
            tools:text="Sample name"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/newconnection_addresstv"
            android:layout_column="1"
            android:layout_row="1"
            tools:text="24:4b:03:f3:c3:0a"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/newconnection_connidtv"
            android:layout_column="1"
            android:layout_row="2"
            tools:text="1234"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button android:layout_width="0dp"
            android:id="@+id/newconnection_acceptbt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accept"/>
        <Button android:layout_width="0dp"
            android:id="@+id/newconnection_rejectbt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reject"/>
    </LinearLayout>

</RelativeLayout>
